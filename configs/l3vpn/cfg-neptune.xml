<config xmlns="http://tail-f.com/ns/config/1.0">
  <l3vpn-svc xmlns="urn:ietf:params:xml:ns:yang:ietf-l3vpn-svc">
    <vpn-services>
      <vpn-service>
        <vpn-id>cal</vpn-id>
        <customer-name>EANTC</customer-name>
      </vpn-service>
      <vpn-service>
        <vpn-id>outer</vpn-id>
      </vpn-service>
      <vpn-service>
        <vpn-id>sol</vpn-id>
      </vpn-service>
    </vpn-services>
    <sites>
      <site>
        <site-id>neptune</site-id>
        <locations>
          <location>
            <location-id>lab</location-id>
          </location>
        </locations>
        <devices>
          <device>
            <device-id>ciena-6</device-id>
            <location>lab</location>
          </device>
        </devices>
        <management>
          <type>provider-managed</type>
        </management>
        <vpn-policies>
          <vpn-policy>
            <vpn-policy-id>vpn1</vpn-policy-id>
            <entries>
              <id>1</id>
              <vpn>
                <vpn-id>outer</vpn-id>
              </vpn>
            </entries>
          </vpn-policy>
        </vpn-policies>
        <site-network-accesses>
          <site-network-access>
            <site-network-access-id>1</site-network-access-id>
            <device-reference>ciena-6</device-reference>
            <ip-connection>
              <ipv4>
                <address-allocation-type>static-address</address-allocation-type>
                <addresses>
                  <provider-address>40.2.3.1</provider-address>
                  <customer-address>40.2.3.2</customer-address>
                  <prefix-length>30</prefix-length>
                </addresses>
              </ipv4>
            </ip-connection>
            <service>
              <svc-input-bandwidth>1000</svc-input-bandwidth>
              <svc-output-bandwidth>1000</svc-output-bandwidth>
              <svc-mtu>2000</svc-mtu>
            </service>
            <vpn-attachment>
              <vpn-id>outer</vpn-id>
            </vpn-attachment>
          </site-network-access>
        </site-network-accesses>
      </site>
    </sites>
  </l3vpn-svc>
</config>
