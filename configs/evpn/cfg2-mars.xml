<config xmlns="http://tail-f.com/ns/config/1.0">
  <l2vpn-svc xmlns="urn:ietf:params:xml:ns:yang:ietf-l2vpn-svc">
    <vpn-services>
      <vpn-service>
        <vpn-id>evpn1</vpn-id>
        <frame-delivery>
          <multicast-gp-port-mapping>static-mapping</multicast-gp-port-mapping>
        </frame-delivery>
        <ce-vlan-preservation>false</ce-vlan-preservation>
        <ce-vlan-cos-preservation>false</ce-vlan-cos-preservation>
      </vpn-service>
      <vpn-service>
        <vpn-id>evpn2</vpn-id>
        <frame-delivery>
          <multicast-gp-port-mapping>static-mapping</multicast-gp-port-mapping>
        </frame-delivery>
        <ce-vlan-preservation>false</ce-vlan-preservation>
        <ce-vlan-cos-preservation>false</ce-vlan-cos-preservation>
      </vpn-service>
      <vpn-service>
        <vpn-id>evpn3</vpn-id>
        <frame-delivery>
          <multicast-gp-port-mapping>static-mapping</multicast-gp-port-mapping>
        </frame-delivery>
        <ce-vlan-preservation>false</ce-vlan-preservation>
        <ce-vlan-cos-preservation>false</ce-vlan-cos-preservation>
      </vpn-service>
    </vpn-services>
    <sites>
      <site>
        <site-id>mars</site-id>
        <devices>
          <device>
            <device-id>ciena-5</device-id>
            <location>lab</location>
          </device>
        </devices>
        <management>
          <type>provider-managed</type>
        </management>
        <locations>
          <location>
            <location-id>lab</location-id>
          </location>
        </locations>
        <vpn-policies>
          <vpn-policy>
            <vpn-policy-id>vpnp1</vpn-policy-id>
            <entries>
              <id>1</id>
              <vpn>
                <vpn-id>evpn1</vpn-id>
                <site-role>any-to-any-role</site-role>
              </vpn>
            </entries>
          </vpn-policy>
        </vpn-policies>
        <default-ce-vlan-id>100</default-ce-vlan-id>
        <site-network-accesses>
          <site-network-access>
            <network-access-id>1</network-access-id>
            <device-reference>ciena-5</device-reference>
            <connection>
              <oam>
                <md-name>oam1</md-name>
                <md-level>1</md-level>
              </oam>
            </connection>
            <vpn-attachment>
              <vpn-id>evpn1</vpn-id>
            </vpn-attachment>
            <service>
              <svc-mtu>2000</svc-mtu>
            </service>
          </site-network-access>
        </site-network-accesses>
      </site>
    </sites>
  </l2vpn-svc>
</config>